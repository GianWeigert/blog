<div class="col-sm-12">
  <h2 class="text-center"> Cadastre-se! </h2>        
</div>

<div class="col-sm-12">
  <div class="justify-content-center row">
    <div class="card col-sm-5">
      <div class="card-body row">
        <form action="#" method="POST">
          <div class="form-row">
            <div class="form-group col-sm-12">
              <label for="name">Nome:</label>
              <input name="name" class="form-control {{#if errors.name}}border border-danger"{{/if}} type="text" placeholder="Nome do usuário"/>

              {{#if errors.name}}
                <span class="text-danger">{{errors.name}}</span>
              {{/if}}
            </div>

            <div class="form-group col-sm-12">
              <label for="email">Email:</label>
              <input name="email" class="form-control {{#if errors.email}}border border-danger{{/if}}" type="text" placeholder="Email"/>

              {{#if errors.email}}
                <span class="text-danger">{{errors.email}}</span>
              {{/if}}
            </div>

            <div class="form-group col-sm-12">
              <label for="password[primary]">Senha:</label>
              <input name="password[primary]" type="password" class="form-control {{#if errors.password}}border border-danger{{/if}}" />

              {{#if errors.password}}
                <span class="text-danger">{{errors.password}}</span>
              {{/if}}
            </div>

            <div class="form-group col-sm-12">
              <label for="password[confirm]">Confirmação da senha:</label>
              <input name="password[confirm]" type="password" class="form-control {{#if errors.password}}border border-danger{{/if}}" />

              {{#if errors.password}}
                <span class="text-danger">{{errors.password}}</span>
              {{/if}}
            </div>

            <div class="col-sm-12">
              <button class="btn btn-success float-right" type="submit">Cadastrar</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
